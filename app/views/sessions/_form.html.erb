<%= form_with url: sessions_path, local: true do |form| %>
  <%= flash_message %>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, id: :email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.text_field :password, id: :password %>
    <% session['previous_url'] = request.referrer %>

  </p>

  <p><%= form.submit 'Enter' %></p
<% end %>

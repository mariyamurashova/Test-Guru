
<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <strong>Category:</strong>
  <%= @test.category.title %>
</p>

<p>
  <strong>Redy for publication:</strong>
    <%if @test.redy_for_publication == true %>
       <input type="checkbox" id="scales" name="scales" checked />
    <% else %>
       <h7>not ready</h7>
    <% end %>
</p>

